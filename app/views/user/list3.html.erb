<h1>Listing of All WECF Users </h1>

<h3>Select the user you want to add to your submission </h3>

<table cellpadding=5px cellspacing=1px >
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>EMail</th>
    <th>Phone</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.send('first_name') %></td>
    <td><%=h user.send('last_name') %></td>
    <td><%=h user.send('email') %></td>
    <td><%=h user.send('phone') %></td>
    <td><%= link_to('Show',   {:controller => 'user',       :action => 'show',        :id => user.id}) %></td>
    <td><%= link_to('Select', {:controller => 'submission', :action => 'select_user', :id => user.id}) %></td>
  </tr>
<% end %>
</table>

