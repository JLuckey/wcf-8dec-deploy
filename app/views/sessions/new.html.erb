<h1> Sign In </h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
  	<%= f.label 		 :email %> <br>
  	<%= f.text_field :email %>
  </div>
	<br>
  <div class="field">
  	<%= f.label 		 		 :password %> <br>
  	<%= f.password_field :password %>
  </div>
  <br> <br>
  <div class="actions" >
  	<%= f.submit "Sign in" %>
  </div>

<% end %>



